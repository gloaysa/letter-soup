{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"target": "es2019",
		"jsx": "react",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "./dist/",
		"skipLibCheck": true,
		"lib": ["DOM"]
	},
	"exclude": ["./src/server "],
	"include": ["./src/client/*", "./src/client/types/**/*.d.ts"]
}
